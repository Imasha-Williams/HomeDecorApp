<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bed_Fragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Stylish Seating and Functional Surfaces for Every Room"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/chairImage01"
        android:layout_width="154dp"
        android:layout_height="147dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/chair1"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/chairImage02"
        android:layout_width="154dp"
        android:layout_height="147dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/chair2" />

    <ImageView
        android:id="@+id/chairImage03"
        android:layout_width="154dp"
        android:layout_height="147dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="290dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/chair3"
        android:background="@android:color/darker_gray"  />

    <ImageView
        android:id="@+id/chairImage04"
        android:layout_width="154dp"
        android:layout_height="147dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/chair4" />

</FrameLayout>